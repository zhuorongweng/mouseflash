<% if (allrecs.length > 0) {%>
    <table border=1>
            <tr>
                <th>Review ID</th> 
                <th>Customer ID</th>
                <th>Product ID</th>
                <th>Review Date</th>
                <th>rating </th>
                <th>Status</th>
                <th colspan="3">Actions</th>
            </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.review_id   %></td>
            <td><%= recref.customer_id   %></td>
            <td><%= recref.product_id   %></td>
            <td><%= recref.reviewdate   %></td>
            <td><%= recref.rating    %></td>
            <td><%= recref.status   %></td>
            <td><a href='/review/<%= recref.review_id %>/show'> Details</a></td>
            <td><a href='/review/<%= recref.review_id %>/edit'>Edit</a></td>
            <td><a href='/review/<%= recref.review_id %>/delete'  onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
      <% }); %>
</table>
    
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
    
<p> <a href='/review/addrecord'>Add New</a> </p>
    