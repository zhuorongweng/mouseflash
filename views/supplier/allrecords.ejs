<% if (allrecs.length > 0) {%>
    <table border=1>
            <tr>
                <th>Supplier ID</th> 
                <th>Supplier Name</th>
                <th>Point of Contact</th>
                <th>Web URL</th>
                <th>Supplier Notes </th>
                <th colspan="3">Actions</th>
            </tr>
      <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.supplier_id %></td>
            <td><%= recref.suppliername %></td>
            <td><%= recref.Pointofcontact %></td>
            <td><%= recref.weburl %></td>
            <td><%= recref.suppliernotes %></td>
            <td><a href='/supplier/<%= recref.supplier_id%>/show'> Details</a></td>
            <td><a href='/supplier/<%= recref.supplier_id%>/edit'>Edit</a></td>
            <td><a href='/supplier/<%= recref.supplier_id%>/delete'  onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
        </tr>
      <% }); %>
</table>
    
    <% } else { %>
        <p>Not Records Available</p>
    <% } %>
    
<p> <a href='/supplier/addrecord'>Add New</a> </p>
    