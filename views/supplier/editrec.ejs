<h1> Edit Product</h1>
<form action="/product/save" method="post">
    <input type="hidden" name="product_id" value="<%= onerec.product_id %>" >
<table>
    <tr> <td> Supplier Name: </td> <td> <input type="text" name="suppliername  " value="<%= onerec.suppliername %>" required> </td> </tr>
    <tr> <td> Point of Contact : </td> <td> <input type="text" name="Pointofcontact  " value="<%= onerec.Pointofcontact%>" required> </td> </tr>
    <tr> <td> Web URL : </td> <td> <input type="text" name="weburl   " value="<%= onerec.weburl%>" required> </td> </tr>
    <tr> <td> Supplier Notes  : </td> <td> <input type="text" name="suppliernotes   " value="<%= onerec.suppliernotes%>" required> </td> </tr>
</table>
<button type="submit">Save</button>
</form>
